    <title>Addiction Recovery through Family Health Accounts Act</title>
    <recordedVotes />
    <summaries>
      <billSummaries>
        <item>
          <name>Introduced in House</name>
          <updateDate>2017-03-16T04:00:00Z</updateDate>
